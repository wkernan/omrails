<div class="box">
	<%= link_to (image_tag pin.image(:medium)), pin %>
	<h3 class="description">
		<%= pin.description %>
	</h3>
	<p>
		<span class="label label-success">
			<strong>
				Posted by <i class="icon-user"></i> <%= pin.user.username %>
			</strong>
		</span>
	</p>
	<% if current_user == pin.user %>
		<p>
			<%= link_to '<button class="btn btn-small btn-info" type="button"><i class="icon-pencil"></i> Edit</button>'.html_safe, edit_pin_path(pin) %>
			<%= link_to '<button class="btn btn-small btn-danger"><i class="icon-remove"></i> Destroy</button>'.html_safe, pin, confirm: 'Are you sure?', method: :delete %>
		</p>
	<% end %>
</div>
